<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context="com.creatures.todo.CreateCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Title *"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:textColor="@color/red_700"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            android:theme="@style/my_edit_text_text"
            android:padding="@dimen/_10sdp"
            android:id="@+id/create_title"
            android:textColor="@color/white"
            android:background="@drawable/red_border_bg"
            android:fontFamily="@font/abhaya_libre_bold"
            android:hint="Type Your Title Here"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Description *"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:textColor="@color/red_700"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            android:padding="@dimen/_10sdp"
            android:theme="@style/my_edit_text_text"
            android:id="@+id/create_description"
            android:background="@drawable/red_border_bg"
            android:fontFamily="@font/abhaya_libre_bold"
            android:hint="Type Your Title Here"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Priority *"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:fontFamily="@font/abhaya_libre_extrabold"
            android:textColor="@color/red_700"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:background="@drawable/red_border_bg"
            android:id="@+id/create_notes_radio_group"
            android:paddingHorizontal="@dimen/_8sdp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/abhaya_libre_bold"
                android:text="High"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/abhaya_libre_bold"
                android:text="Medium"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_14sdp"
                android:fontFamily="@font/abhaya_libre_bold"
                android:text="Low"/>

        </RadioGroup>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_button"
        android:paddingHorizontal="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp" />


</LinearLayout>